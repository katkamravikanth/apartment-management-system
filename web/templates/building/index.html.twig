{% extends 'base.html.twig' %}

{% block title %}Building index{% endblock %}

{% block body %}
    <h1>Building index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Address</th>
                <th>NumOfFloors</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>DeletedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for building in buildings %}
            <tr>
                <td>{{ building.id }}</td>
                <td>{{ building.name }}</td>
                <td>{{ building.address }}</td>
                <td>{{ building.numOfFloors }}</td>
                <td>{{ building.createdAt ? building.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ building.updatedAt ? building.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ building.deletedAt ? building.deletedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_building_show', {'id': building.id}) }}">show</a>
                    <a href="{{ path('app_building_edit', {'id': building.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_building_new') }}">Create new</a>
{% endblock %}
