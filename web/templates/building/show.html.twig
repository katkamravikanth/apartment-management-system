{% extends 'base.html.twig' %}

{% block title %}Building{% endblock %}

{% block body %}
    <h1>Building</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ building.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ building.name }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ building.address }}</td>
            </tr>
            <tr>
                <th>NumOfFloors</th>
                <td>{{ building.numOfFloors }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ building.createdAt ? building.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ building.updatedAt ? building.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DeletedAt</th>
                <td>{{ building.deletedAt ? building.deletedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_building_index') }}">back to list</a>

    <a href="{{ path('app_building_edit', {'id': building.id}) }}">edit</a>

    {{ include('building/_delete_form.html.twig') }}
{% endblock %}
